{
  "name": "agentik",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "clean": "rm -rf packages/*/dist",
    "knip": "knip",
    "test": "bun run build && bun test ./packages",
    "setup:certs": "bun run scripts/setup-certs.ts",
    "setup:icons": "bun run scripts/generate-icons.ts",
    "dev:bridge": "bun run packages/office-bridge/src/server.ts",
    "dev:excel:vite": "bun run --filter @agentik/office-excel dev",
    "dev:excel": "bun run --parallel dev:bridge dev:excel:vite",
    "dev:powerpoint:vite": "bun run --filter @agentik/office-powerpoint dev",
    "dev:powerpoint": "bun run --parallel dev:bridge dev:powerpoint:vite",
    "dev:outlook:vite": "bun run --filter @agentik/office-outlook dev",
    "dev:outlook": "bun run --parallel dev:bridge dev:outlook:vite",
    "sideload:excel": "bun run --filter @agentik/office-excel sideload",
    "sideload:powerpoint": "bun run --filter @agentik/office-powerpoint sideload",
    "sideload:outlook": "bun run --filter @agentik/office-outlook sideload",
    "build:office": "tsc -b packages/office-common packages/office-bridge packages/office-excel packages/office-powerpoint packages/office-outlook"
  },
  "devDependencies": {
    "@types/bun": "^1.2.1",
    "@types/node": "^20.17.24",
    "knip": "^5.83.0",
    "lefthook": "^2.1.0",
    "office-addin-debugging": "^5.0.0",
    "office-addin-dev-certs": "^1.13.0",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.10.0",
    "typescript": "^5.8.3"
  }
}
