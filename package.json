{
  "name": "agentik",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "clean": "rm -rf packages/*/dist",
    "knip": "knip",
    "test": "bun run build && bun test ./packages"
  },
  "devDependencies": {
    "@types/bun": "^1.2.1",
    "@types/node": "^20.17.24",
    "knip": "^5.83.0",
    "lefthook": "^2.1.0",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.10.0",
    "typescript": "^5.8.3"
  }
}
